<h1>Here you can edit your group : {{group.name}}</h1>

<div class="form-container">

  <div class="form left">
    <form action="/groups/{{group._id}}/edit" method="post" id="edit-group">

      <div class="form-group">
        <label class="form-label mt-4">Edit Group Name</label>

        <div class="input-group mb-3">
          <input
            type="text"
            class="form-control"
            placeholder="write a groupe name"
            aria-label="write a groupe name"
            aria-describedby="button-addon2"
          />
          <button
            class="btn btn-primary"
            type="button"
            id="button-addon2"
          >Edit</button>
        </div>
      </div>
      <div class="buttons">

        <button type="submit" class="btn btn-primary">Confirm changes</button>
        <br />

      </div>
    </form>
    <form action="/groups/{{group._id}}/edit" method="post" id="delete-form">
      <div class="button">

        <button form="delete-form" type="submit" class="btn btn-primary">Delete
          group</button>
      </div>
    </form>
  </div>
  <div class="right users-list">
    <fieldset id="users-list">
      <legend class="mt-4">Add / Remove Users To Group</legend>
      {{#each users}}
        <div class="form-check form-switch row-user" data-userID="{{_id}}">
          <input
            form="create-group"
            class="form-check-input"
            type="checkbox"
            name="participants"
            value="{{_id}}"
            id="{{_id}}"
            {{#if this.isChecked}}
            checked="true"
            {{/if}}
          />
          <label class="form-check-label user-row" for="{{_id}}">
            <div class="user">
              <div class="username">{{username}}</div>
              <img
                class="avatar"
                src="{{avatarUrl}}"
                alt="{{userName}}'s avatar"
              />
              <div
                class="group-match"
              >{{matchGroup.pourcentage}}%</div>
            </div>
          </label>

        </div>
      {{/each}}
    </fieldset>
  </div>

</div>